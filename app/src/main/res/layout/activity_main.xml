<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fc8e2d"
    tools:context="com.example.emartin.flashcards.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/app_title"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        >

        <Button
            android:id="@+id/start_game_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:onClick="startGame"
            android:background="@drawable/main_button_gradient"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/add_notes_camera_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add Notes by Camera"
            android:onClick="addNotesCamera"
            android:background="@drawable/main_button_gradient"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/add_notes_upload_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add Notes by Upload"
            android:onClick="addNotesUpload"
            android:background="@drawable/main_button_gradient"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/user_stats_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:onClick="userStats"
            android:background="@drawable/main_button_gradient"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:onClick="openSettings"
            android:background="@drawable/main_button_gradient"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/temp_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="TEMPORARY"
            android:onClick="readFile"
            android:background="@drawable/main_button_gradient"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    </LinearLayout>

</LinearLayout>
